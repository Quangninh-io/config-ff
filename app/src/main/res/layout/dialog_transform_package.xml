<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/_10sdp"
    android:paddingEnd="@dimen/_10sdp">

    <TextView
        android:id="@+id/tv_name_trans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Bộ sưu tập skin súng v1"
        android:textSize="@dimen/_18sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_trans"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_177sdp"
        android:layout_marginTop="-15dp"
        android:src="@drawable/package1"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_trans"
        app:riv_corner_radius="@dimen/_3sdp" />
    <ImageView
        android:id="@+id/iv_next"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/ic_next"
        app:tint="@color/white"
        android:background="@drawable/selector_next"
        android:paddingStart="@dimen/_3sdp"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="@dimen/_2sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        app:layout_constraintEnd_toEndOf="@id/iv_trans"
        app:layout_constraintTop_toTopOf="@id/iv_trans"
        app:layout_constraintBottom_toBottomOf="@id/iv_trans"/>

    <ImageView
        android:id="@+id/iv_previous"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/ic_next"
        app:tint="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/selector_next"
        android:paddingStart="@dimen/_3sdp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:rotationY="180"
        android:layout_marginStart="@dimen/_3sdp"
        app:layout_constraintStart_toStartOf="@id/iv_trans"
        app:layout_constraintTop_toTopOf="@id/iv_trans"
        app:layout_constraintBottom_toBottomOf="@id/iv_trans"/>


</androidx.constraintlayout.widget.ConstraintLayout>