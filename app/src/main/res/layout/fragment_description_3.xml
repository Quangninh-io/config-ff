<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.guide.DescriptionFragment">
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/giv"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="@dimen/_440sdp"
        app:layout_constraintVertical_bias="0.05"
        android:src="@drawable/file"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.25"
        android:text="@string/des_3"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/giv"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/giv"
        app:layout_constraintTop_toBottomOf="@+id/giv"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>